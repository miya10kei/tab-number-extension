{
  "name": "Tab Number",
  "version": "1.0",
  "description": "Show tab number",
  "manifest_version": 2,
  "permissions": ["tabs", "<all_urls>"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": ["images/*"]
}
